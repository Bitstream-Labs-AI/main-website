{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],
    "rootDir": "../../",
    "outDir": "../../dist/functions",
    "strict": true,
    "types": ["node", "vitest/globals"],
    "skipLibCheck": true,
    "baseUrl": "../../",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./**/*.ts", "../../src/schemas/**/*.ts", "../../src/utils/**/*.ts"],
  "exclude": ["../../src/components/**/*", "../../src/views/**/*", "../../src/**/*.vue"]
}
