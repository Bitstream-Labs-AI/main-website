# Get list of staged files that match our file patterns
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(js|jsx|ts|tsx|vue|css|scss|json|md)$' || true)

if [ -z "$STAGED_FILES" ]; then
  echo "â„¹ï¸  No files to lint or format"
else
  echo "ğŸ” Running lint on staged files..."
  echo "$STAGED_FILES" | xargs pnpm exec eslint --fix --cache || true

  echo "âœ¨ Running format on staged files..."
  echo "$STAGED_FILES" | xargs pnpm exec prettier --write --experimental-cli || true

  echo "ğŸ“¦ Staging auto-fixed files..."
  echo "$STAGED_FILES" | xargs git add || true
fi

echo "ğŸ§ª Running unit tests..."
pnpm test:unit

echo "âœ… Pre-commit checks passed!"
